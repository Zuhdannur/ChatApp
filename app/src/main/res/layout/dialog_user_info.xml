<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView android:layout_width="93dp"
               android:src="@drawable/icon"
                android:id="@+id/picProfile"
               android:layout_height="104dp" tools:ignore="MissingConstraints"
               android:layout_marginTop="16dp"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
               android:layout_marginStart="8dp"/>
    <TextView android:layout_width="wrap_content"
              android:text="Name"
              android:textSize="18sp"
              android:id="@+id/playersName"
              android:layout_height="wrap_content" tools:ignore="MissingConstraints"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/picProfile" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
              android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="8dp"/>
    <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            app:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:elevation="0dp"
            android:text="Chat"
            android:id="@+id/chat"
            android:layout_height="79dp" android:layout_width="171dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/playersName"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            app:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:elevation="0dp"
            android:text="Unfriend"
            android:id="@+id/unfriend"
            android:layout_height="79dp" android:layout_width="171dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/playersName"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/chat" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.933"/>
</androidx.constraintlayout.widget.ConstraintLayout>