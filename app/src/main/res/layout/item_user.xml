<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:clickable="true"
              android:layout_height="wrap_content">
    <ImageView android:layout_width="73dp"
               android:padding="16dp"
               android:id="@+id/picProfile"
               android:src="@drawable/icon"
               android:layout_height="82dp" tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="0dp"
               tools:layout_editor_absoluteX="1dp"/>

    <TextView android:layout_width="wrap_content"
              android:text="Players Name"
              android:textSize="18sp"
              android:layout_height="wrap_content" tools:ignore="MissingConstraints"
              app:layout_constraintStart_toEndOf="@+id/picProfile"
              android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
              app:layout_constraintTop_toTopOf="parent" android:id="@+id/playersName"/>
    <TextView android:layout_width="91dp"
              android:text="Status"
              android:textSize="14sp"
              android:id="@+id/status"
              android:layout_height="19dp" tools:ignore="MissingConstraints"
              app:layout_constraintStart_toEndOf="@+id/picProfile" android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp"
              app:layout_constraintTop_toBottomOf="@+id/playersName"/>
</androidx.constraintlayout.widget.ConstraintLayout>