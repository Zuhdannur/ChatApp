<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        tools:context=".ui.activity.login.LoginActivity" android:id="@+id/coordinatorLayout">
    <ImageView android:layout_width="175dp"
               android:src="@drawable/ic_logos"
               android:layout_height="193dp" tools:ignore="MissingConstraints"
               android:layout_marginTop="208dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
               android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
               android:id="@+id/imageView3" app:layout_constraintHorizontal_bias="0.495"/>
    <com.google.android.material.button.MaterialButton
            android:layout_width="222dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_height="58dp" android:text="Sign In With Google"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:id="@+id/btnLogin"
            app:icon="@drawable/icon"
            app:iconTint="@color/colorPrimary"
            app:iconSize="18dp"
            android:textColor="@color/colorPrimary"
            android:drawableRight="@drawable/icon"
            android:backgroundTint="@color/white"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.497"/>

</androidx.constraintlayout.widget.ConstraintLayout>