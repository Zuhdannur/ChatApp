<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

        android:background="@drawable/background_gradient"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView android:layout_width="157dp"
               android:src="@drawable/ic_logos"
               android:layout_height="183dp" tools:ignore="MissingConstraints"
               android:layout_marginTop="272dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
               android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
    />
    <ImageView android:layout_width="165dp"
               android:id="@+id/awan"
               android:visibility="gone"
               android:src="@drawable/no_inet"
               android:layout_height="158dp" tools:ignore="MissingConstraints"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
               android:layout_marginStart="8dp" android:layout_marginTop="220dp"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.495"/>
    <TextView
            android:id="@+id/ket"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:text="Beli Kuota Dlu atu G konek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/awan" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

    <com.google.android.material.button.MaterialButton android:layout_width="120dp"
                                                       android:text="Try Again"
                                                       android:visibility="gone"
                                                       android:id="@+id/reconect"
                                                       android:textColor="@android:color/white"
                                                       android:backgroundTint="@color/colorPrimaryDark"
                                                       android:layout_height="46dp"
                                                       android:gravity="center"
                                                       app:layout_constraintTop_toBottomOf="@+id/ket"
                                                       android:layout_marginTop="20dp"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       android:layout_marginLeft="8dp"
                                                       android:layout_marginStart="8dp"

                                                       android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                                                       app:layout_constraintHorizontal_bias="0.498"/>

</androidx.constraintlayout.widget.ConstraintLayout>