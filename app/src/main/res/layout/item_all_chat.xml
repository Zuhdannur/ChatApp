<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="16dp"
              android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/icon"
            tools:ignore="MissingConstraints" android:id="@+id/iconChat"/>
    <TextView android:layout_width="144dp"
              android:layout_height="23dp"
              android:text="Title Chat "
              tools:ignore="MissingConstraints"
              android:id="@+id/title"
              android:textSize="18sp"
              app:layout_constraintStart_toEndOf="@+id/iconChat"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"
              android:layout_marginStart="16dp" android:layout_marginTop="4dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:fontFamily="@font/light"
              android:gravity="center"
              android:text="Sedang Mengetik ...."
              tools:ignore="MissingConstraints"
              app:layout_constraintTop_toBottomOf="@+id/title" app:layout_constraintStart_toEndOf="@+id/iconChat"
              android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView android:layout_width="63dp"
              android:text="2 hour"
              android:textSize="12sp"
              android:layout_height="21dp"
              android:gravity="center"
              tools:ignore="MissingConstraints"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/title"
              android:layout_marginLeft="84dp" android:layout_marginStart="84dp" android:layout_marginTop="8dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
              android:layout_marginRight="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>