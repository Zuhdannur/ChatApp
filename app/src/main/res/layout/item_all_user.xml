<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="73dp"
            android:padding="16dp"

            android:id="@+id/picProfile"
            android:src="@drawable/icon"
            android:layout_height="82dp" tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="1dp"/>

    <TextView android:layout_width="wrap_content"
              android:text="Players Name"
              android:textSize="18sp"
              android:layout_height="wrap_content" tools:ignore="MissingConstraints"
              app:layout_constraintStart_toEndOf="@+id/picProfile"
              android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="28dp"
              app:layout_constraintTop_toTopOf="parent" android:id="@+id/playersName"/>
    <Button
            android:text="Tambah"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:id="@+id/btnUsers"
            android:textSize="10sp"
            tools:ignore="MissingConstraints" android:layout_height="29dp"
            android:layout_width="56dp"
            app:layout_constraintStart_toEndOf="@+id/playersName"
            android:layout_marginStart="112dp" android:layout_marginLeft="112dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>