<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.home.HomeActivity">

    <FrameLayout android:layout_width="match_parent"
                 android:id="@+id/content"
                 android:layout_height="match_parent" tools:layout_editor_absoluteY="254dp"
                 tools:layout_editor_absoluteX="34dp">
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView android:layout_width="match_parent"
                                                                       android:layout_height="wrap_content"
                                                                       android:id="@+id/bottomNav"
                                                                       android:background="@color/white"
                                                                       tools:ignore="MissingConstraints"
                                                                       app:menu="@menu/bottom_nav"
                                                                       app:itemTextColor="@color/colorPrimary"
                                                                       app:itemIconTint="@color/colorPrimary"
                                                                       app:layout_constraintBottom_toBottomOf="@+id/content"
                                                                       app:layout_constraintEnd_toEndOf="parent"
    ></com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>